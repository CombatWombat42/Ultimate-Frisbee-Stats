<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gotooffense" android:id="@+id/GoToOffenseB"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/goToDynamicButtons" android:id="@+id/GoToDynamicButtonsB"></Button>
<Button android:layout_height="wrap_content" android:id="@+id/StartGameB" android:layout_width="wrap_content" android:text="@string/startGameorTournament"></Button>
<Spinner android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/RecentTournamentsSP"></Spinner>
<Button android:text="@string/continuetournement" android:layout_height="wrap_content" android:id="@+id/ContinueTournamentB" android:layout_width="wrap_content"></Button>
<TableLayout android:layout_height="wrap_content" android:id="@+id/tableLayout1" android:layout_width="match_parent">
    <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:text="TextView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/pathToExternalStorage"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/RosterReadPathET"></EditText>
    </TableRow>
</TableLayout>
<EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/RosterReadFileET"></EditText>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/readRosterFromFileB" android:id="@+id/ReadRosterFromFileB"></Button>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/AddContactB" android:text="@string/addContactButton"></Button>
</LinearLayout>
