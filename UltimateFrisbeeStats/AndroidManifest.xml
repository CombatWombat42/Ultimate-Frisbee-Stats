<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="UltimateFrisbee.Stats"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".UltimateFrisbeeStatsActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="OffenseHandler"></activity>
        <activity android:name="DynamicButtons"></activity>
        <activity android:name="NewGame"></activity>
        <activity android:name="RosterForGame" android:configChanges="keyboardHidden|orientation"></activity>
        <activity android:name="RosterForPoint" android:configChanges="keyboardHidden|orientation"></activity>
        <activity android:name="StatPoint" android:configChanges="keyboardHidden|orientation"></activity>
        <activity android:name="GetTotals"></activity>

    </application>
</manifest>